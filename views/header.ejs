<style>
  /* @import url("https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,500&display=swap"); */
  * {
    box-sizing: border-box;
    margin: 0px;
    padding: 0px;
  }
  nav {
    padding: 10px;
  }

  #topNav {
    list-style: none;
    display: flex;
    background: linear-gradient(to right, #eb2388, #eb2388, #f7429c, #f17eb8);
    box-shadow: 1px 0px 14px #bbb;
    align-items: center;
    justify-content: center;
    display: none;
  }
  #mobiletopNav {
    list-style: none;
    position: fixed;
    width: 100%;
    display: flex;
    justify-content: flex-end;
    padding: 10px;
    background: linear-gradient(to right, #eb2388, #eb2388, #f7429c, #f17eb8);
    box-shadow: 1px 0px 14px #bbb;
  }
  #topNav li {
    padding: 18px;
    border-top-right-radius: 20px;
    border-bottom-right-radius: 20px;
    font-family: "Roboto", sans-serif;
  }

  #topNav li a {
    text-decoration: none;
    color: white;
  }
  #topNav li a:hover {
    text-decoration: underline;
    color: #1c1850;
  }
  .desktop_only {
    display: none;
  }
  .toggler {
    margin: 9.5px 0 9.5px 20px;

    width: 40px;
    cursor: pointer;
    height: 20px;
    -webkit-touch-callout: none; /* iOS Safari */
    -webkit-user-select: none; /* Safari */
    -khtml-user-select: none; /* Konqueror HTML */
    -moz-user-select: none; /* Old versions of Firefox */
    -ms-user-select: none; /* Internet Explorer/Edge */
    user-select: none; /* Non-prefixed version, currently
                                  supported by Chrome, Edge, Opera and Firefox */
  }
  .toggler div {
    background: #fff;
    padding: 2px;
    margin-bottom: 5px;
    transition: 0.1s;
    width: 50%;
    -webkit-touch-callout: none; /* iOS Safari */
    -webkit-user-select: none; /* Safari */
    -khtml-user-select: none; /* Konqueror HTML */
    -moz-user-select: none; /* Old versions of Firefox */
    -ms-user-select: none; /* Internet Explorer/Edge */
    user-select: none; /* Non-prefixed version, currently
                                  supported by Chrome, Edge, Opera and Firefox */
  }
  .box-padding {
    padding-top: 60px;
    display: block;
  }

  .side-bar {
    position: fixed;
    background: white;
    height: 100%;
    width: 60%;
    box-shadow: 1px 0px 13px #555;
    max-width: 350px;
    z-index: 10000;
    left: -100vh;
    transition: 0.5s;
  }

  .slideSideBar {
    left: 0;
    transition: 0.5s;
  }
  .overlay {
    background: rgba(0, 0, 0, 0.8);
    position: fixed;
    height: 100%;
    width: 100%;
    z-index: 900;
    display: none;
  }
  .logoCont {
    display: flex;

    justify-content: center;
    align-items: center;
    padding-bottom: 10px;
    border-bottom: 2px solid #eee;
  }

  .side-bar li {
    padding: 10px;
  }

  .side-bar li a {
    text-decoration: none;
    color: #f7429c;
  }

  @media (min-width: 980px) {
    .box-padding {
      display: none;
    }
    #topNav {
      display: flex;
    }
    #mobiletopNav {
      display: none;
    }
  }
</style>
<ul class="side-bar">
  <div class="logoCont">
    <img src="/images/livingspring.png" alt="logo" height="140px" />
  </div>
  <li><a href="/">Home</a></li>
  <li><a href="/about-us">About us</a></li>
  <li><a href="/services">Our Services</a></li>
  <li><a href="/home-care-resources">Home care resources</a></li>
  <li><a href="/apply-now">Apply Now</a></li>
  <li><a href="/contact-us">Contact us</a></li>
</ul>
<div class="overlay"></div>

<ul id="topNav" class="desktop_only">
  <li><a href="/">Home</a></li>
  <li><a href="/about-us">About us</a></li>
  <li><a href="/services">Our Services</a></li>
  <li><a href="/home-care-resources">Home care resources</a></li>
  <li><a href="/apply-now">Apply Now</a></li>
  <li><a href="/contact-us">Contact us</a></li>
</ul>

<ul id="mobiletopNav" class="mobile_header">
  <div class="toggler">
    <div></div>
    <div></div>
    <div></div>
  </div>
</ul>

<div class="box-padding"></div>

<script>
  const toggle = document.querySelector(".toggler");
  const sideBar = document.querySelector(".side-bar");
  const overlay = document.querySelector(".overlay");
  toggle.addEventListener("click", (e) => {
    sideBar.classList.toggle("slideSideBar");
    overlay.style.display = "block";
  });

  overlay.addEventListener("click", (e) => {
    overlay.style.display = "none";
    sideBar.classList.toggle("slideSideBar");
  });
</script>
